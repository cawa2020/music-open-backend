generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int        @id @default(autoincrement())
  email             String     @unique
  username          String     @unique
  password          String
  favoriteSongs     String[]   @map("favorite_songs")
  favoriteArtists   String[]   @map("favorite_artists")
  favoritePlaylists String[]   @map("favorite_playlists")
  createdPlaylists  String[]   @map("created_playlists")
  playlists         Playlist[]
}

model Playlist {
  id           Int      @id @default(autoincrement())
  songs        String[]
  creationDate String   @map("creation_date")
  title        String
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
}
